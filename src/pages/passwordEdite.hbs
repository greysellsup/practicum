---
pageTitle: Профиль
---

{{!< general}}
<a href="./index.hbs" class="back-control"></a>
<form class="form">
    <div class="block">
        <div class="block__top">
            <div class="profile">
               {{> "avatar/avatar" url="./avatar.hbs"}}
            </div>
        </div>
        <div class="block__middle">
            <div class="block__row block__row_border-grey">
                {{> "input/input" modifier="input_profile" type="password" name="oldPassword" nameRus="Старый пароль" value="oldPassword" required="required" pattern="\S+.*"}}
            </div>
            <div class="block__row block__row_border-grey">
                {{> "input/input" modifier="input_profile" type="password" name="newPassword" nameRus="Новый пароль" value="newPassword" required="required" pattern="\S+.*"}}
            </div>
            <div class="block__row">
                {{> "input/input" modifier="input_profile" type="password" name="newPassword" nameRus="Повторите новый пароль" value="newPassword" required="required" pattern="\S+.*"}}
            </div>
        </div>
        <div class="block__bottom block__bottom_center">
            <div class="block__button">
                {{> "button/button" text="Сохранить" modifier="button_width-auto"}}
            </div>
        </div>
    </div>
 </form>