<div class="avatar-block">
    <label class="avatar-block__label" for="avatar">
        Поменять аватар
    </label>
    <input id="avatar" type="file" name="avatar" class="avatar-block__input" onchange="loadFile(event)"/>
    <img src="https://dummyimage.com/130x130/efefef/999999.png" class="avatar-block__img" id="output" width="130" alt=""/>
</div>
<script>
    const loadFile = function (event) {
    const image = document.getElementById("output");
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>